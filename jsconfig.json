{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "checkJs": true,
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "jsx": "react",
        "allowArbitraryExtensions": true,
        "allowUmdGlobalAccess": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ]
}